{
  "name": "@icapps/nestjs",
  "version": "1.0.0",
  "description": "A collection of ready-to-use modules and utilities to accelerate building NestJS applications ðŸš€",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared/*",
    "example"
  ],
  "keywords": [
    "nestjs"
  ],
  "homepage": "https://github.com/icapps/nestjs#readme",
  "bugs": {
    "url": "https://github.com/icapps/nestjs/issues",
    "email": "info@icapps.com"
  },
  "license": "ISC",
  "author": "icapps <info@icapps.com> (https://icapps.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/icapps/nestjs.git"
  },
  "scripts": {
    "dev": "turbo run --filter=!example dev",
    "prebuild": "turbo run --filter='./shared/*' build",
    "build": "turbo run --filter='./packages/*' build",
    "test": "turbo run --filter=!example test",
    "lint": "turbo run lint",
    "format": "prettier --ignore-path .gitignore --cache --write .",
    "release": "changeset",
    "publish": "turbo run --filter='./packages/*' build test lint && changeset version && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0"
  },
  "devDependencies": {
    "prettier": "^2.8.4",
    "turbo": "^1.8.1"
  }
}
